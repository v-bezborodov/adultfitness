// app global css
.video-pic {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-size: cover;
    background-position: center;
    filter: grayscale(1) opacity(0.4);
    min-height: 145px;
  }
  .video-pic.activated {
    filter: grayscale(0) opacity(1);;
  }